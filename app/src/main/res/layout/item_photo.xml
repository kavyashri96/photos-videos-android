<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_200"
        android:layout_margin="@dimen/grid_16"
        app:cardCornerRadius="@dimen/grid_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingC1lass">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="@dimen/grid_24"
            android:layout_height="@dimen/grid_24"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/grid_20"
            android:layout_marginEnd="@dimen/grid_20"
            android:src="@drawable/ic_favourite" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewProfile"
            android:layout_width="@dimen/grid_36"
            android:layout_height="@dimen/grid_36"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/grid_10"
            android:layout_marginBottom="@dimen/grid_14"
            android:elevation="@dimen/grid_12"
            android:innerRadius="0dp"
            app:cardCornerRadius="@dimen/grid_40">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/test_profile" />
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/grid_66"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_crad" />

        <TextView
            android:id="@+id/textName"
            style="@style/TextProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/grid_56"
            android:layout_marginBottom="@dimen/grid_20"
            android:textColor="@color/white"
            tools:text="This is the name" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>